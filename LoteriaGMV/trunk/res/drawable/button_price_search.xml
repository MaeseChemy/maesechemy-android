<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/purple_trans" />

            <corners android:radius="5dp" />

            <gradient android:angle="-90" android:endColor="@color/red_trans" android:startColor="@color/red_trans" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/purple_trans" />

            <corners android:radius="5dp" />

            <gradient android:angle="-90" android:endColor="@color/white_trans" android:startColor="@color/white_trans" />
        </shape></item>

</selector>