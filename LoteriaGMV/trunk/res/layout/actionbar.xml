<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white_trans"
    android:clickable="false" >

    <LinearLayout
        android:id="@+id/action_bar_layout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:background="@drawable/button_action_bar"
         android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ic_back_action"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:scaleType="center"
            android:src="@drawable/ic_action_previous_item" 
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/action_bar_vf_brand"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/action_bar_name_window"
            style="@style/text_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/red" />

    <ImageView
        android:id="@+id/action_bar_brand"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="0.075"
        android:contentDescription="Brand ActionBar"
        android:scaleType="centerCrop"
        android:src="@drawable/brand_actionbar" />

    <LinearLayout
        android:id="@+id/action_bar_layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/action_bar_button_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/button_action_bar"
            android:clickable="true"
            android:src="@drawable/ic_action_refresh"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/action_bar_button_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/button_action_bar"
            android:clickable="true"
            android:src="@drawable/ic_action_settings"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>